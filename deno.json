{
  "compilerOptions": {
    "strict": true,
    "exactOptionalPropertyTypes": false,
    "useUnknownInCatchVariables": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true
  },
  "fmt": {
    "lineWidth": 120
  },
  "workspace": [
    "./packages/*"
  ],
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.13"
  },
  "tasks": {
    "test": " bash -c 'cd packages && for pkg in *; do (cd \"$pkg\" && echo Test package $pkg; deno task test); done'",
    "lint": "deno lint --fix",
    "fmt": "deno fmt",
    "fmt-check": "deno fmt --check",
    "check": "deno check",
    "all": {
      "command": "deno task test",
      "dependencies": [
        "lint",
        "fmt",
        "check"
      ]
    },
    "all-check": {
      "command": "deno task test",
      "dependencies": [
        "lint",
        "fmt-check",
        "check"
      ]
    }
  }
}
